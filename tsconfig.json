{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": ".vercel/output/functions",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["api/**/*", "utils/**/*"],
  "exclude": ["node_modules"]
}
