# ============================================
# VPN Connect - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# For Vercel: Add these in Settings > Environment Variables

# ============================================
# JWT CONFIGURATION (REQUIRED)
# ============================================
# Strong secret key for signing JWT tokens
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-key-here-min-32-chars

# ============================================
# YOOKASSA PAYMENT (REQUIRED)
# ============================================
# Get from: https://yookassa.ru/my/shop-settings
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# ============================================
# 3X-UI PANEL (REQUIRED)
# ============================================
# Your VPS panel URL (with port)
PANEL_URL=https://your-vps-ip:2053

# Panel login credentials
PANEL_USER=admin
PANEL_PASS=your_panel_password

# Inbound ID for VLESS Reality (usually 1)
INBOUND_ID=1

# ============================================
# REALITY SETTINGS (REQUIRED)
# ============================================
# Get these from 3X-UI panel after creating inbound
REALITY_PK=your_reality_public_key
REALITY_SHORT_ID=your_short_id

# SNI domain for Reality (default: yahoo.com)
SNI_DOMAIN=yahoo.com

# ============================================
# OPTIONAL SETTINGS
# ============================================
# Base URL (auto-detected on Vercel)
# BASE_URL=https://botinstasgram.vercel.app

# Secret for Telegram bot API calls (optional)
# BOT_SECRET=your_bot_secret_here
